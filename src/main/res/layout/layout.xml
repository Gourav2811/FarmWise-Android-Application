<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FarmWise ðŸŒ±"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Input Fields -->
        <EditText
            android:id="@+id/input_nitrogen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nitrogen (N)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/input_phosphorus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phosphorus (P)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/input_potassium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Potassium (K)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/input_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temperature (Â°C)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/input_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Humidity (%)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/input_ph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="pH Level"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/input_rainfall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rainfall (mm)"
            android:inputType="numberDecimal" />

        <!-- Predict Button -->
        <Button
            android:id="@+id/predict_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Crop Recommendation"
            android:layout_marginTop="16dp" />

        <!-- Output Text -->
        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommended Crop: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
